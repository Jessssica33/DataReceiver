<?xml version="1.0" encoding="utf-8"?>
<PreferenceScreen xmlns:android="http://schemas.android.com/apk/res/android">
    <PreferenceCategory
        android:title="Connection">
        <CheckBoxPreference
            android:key="opened"
            android:title="Opened Field Book"
            android:icon="@drawable/ic_router_black_24dp"
            android:summary="If Field Book does not opened yet, please open it and click the checkbox"
            android:defaultValue="false"/>
    </PreferenceCategory>
    <PreferenceCategory android:title="Choose Devices">
        <ListPreference
            android:key="deviceList"
            android:summary="@string/list_summary"
            android:title="@string/device"
            android:icon="@drawable/ic_bluetooth_searching_black_24dp"/>
    </PreferenceCategory>
</PreferenceScreen>